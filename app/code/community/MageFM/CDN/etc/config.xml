<?xml version="1.0"?>
<config>
    <modules>
        <MageFM_CDN>
            <version>0.1.0</version>
        </MageFM_CDN>
    </modules>
    <global>
        <models>
            <magefm_cdn>
                <class>MageFM_CDN_Model</class>
            </magefm_cdn>
            <catalog>
                <rewrite>
                    <product_attribute_backend_media>MageFM_CDN_Model_Attribute_Backend_Media</product_attribute_backend_media>
                    <product_image>MageFM_CDN_Model_Image</product_image>
                </rewrite>
            </catalog>
            <core>
                <rewrite>
                    <design_package>MageFM_CDN_Model_Design_Package</design_package>
                </rewrite>
            </core>
            <adminhtml>
                <rewrite>
                    <system_config_backend_image_favicon>MageFM_CDN_Model_System_Config_Backend_Image_Favicon</system_config_backend_image_favicon>
                </rewrite>
            </adminhtml>
        </models>
        <helpers>
            <magefm_cdn>
                <class>MageFM_CDN_Helper</class>
            </magefm_cdn>
            <catalog>
                <rewrite>
                    <image>MageFM_CDN_Helper_Image</image>
                </rewrite>
            </catalog>
            <core>
                <rewrite>
                    <data>MageFM_CDN_Helper_Core</data>
                </rewrite>
            </core>
        </helpers>
    </global>
    <adminhtml>
        <events>
            <catalog_product_save_after>
                <observers>
                    <magefm_cdn>
                        <class>MageFM_CDN_Model_Observer</class>
                        <method>catalogProductSaveAfter</method>
                    </magefm_cdn>
                </observers>
            </catalog_product_save_after>
            <controller_action_predispatch_adminhtml_catalog_product_gallery_upload>
                <observers>
                    <magefm_cdn>
                        <class>MageFM_CDN_Model_Observer</class>
                        <method>adminhtmlCatalogProductGalleryUploadPreDispatch</method>
                    </magefm_cdn>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_gallery_upload>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magefm_cdn>
                                            <title>MageFM CDN</title>
                                        </magefm_cdn>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <MageFM_CDN>
                    <files>
                        <default>MageFM_CDN.csv</default>
                    </files>
                </MageFM_CDN>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <magefm_cdn>
            <general>
                <enabled>0</enabled>
            </general>
            <resize>
                <image><![CDATA[|]]></image>
                <small_image><![CDATA[135x]]></small_image>
                <thumbnail><![CDATA[56x]]></thumbnail>
            </resize>
        </magefm_cdn>
    </default>
</config>
